<?xml version="1.0"?>
<extension key="au.com.agileware.scheduledccrecipients" type="module">
  <file>scheduledccrecipients</file>
  <name>Scheduled Reminder CC Recipients</name>
  <description>This extension provides extra fields on the CiviCRM Scheduled reminder screen, allowing you to send a carbon copy or blind carbon copy of the reminder to additional contacts.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Agileware</author>
    <email>support@agileware.com.au</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/agileware/au.com.agileware.scheduledccrecipients</url>
    <url desc="Documentation">https://github.com/agileware/au.com.agileware.scheduledccrecipients/blob/master/README.md</url>
    <url desc="Support">https://github.com/agileware/au.com.agileware.scheduledccrecipients/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2018-03-27</releaseDate>
  <version>1.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>4.6</ver>
    <ver>4.7</ver>
    <ver>5.0</ver>
  </compatibility>
  <civix>
    <namespace>CRM/Scheduledccrecipients</namespace>
  </civix>
  <comments>
    Note: This extension currently requires a core patch to work correctly See README.
  </comments>
</extension>
